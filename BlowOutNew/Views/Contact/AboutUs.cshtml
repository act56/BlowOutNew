
@{
    ViewBag.Title = "AboutUs";


}



<!-- Grid -->
<div class="w3-row-padding" id="about">
    <div class="w3-center w3-padding-64">
        <span class="w3-xlarge w3-bottombar w3-border-dark-grey w3-padding-16">About Us</span>
    </div>

    <div class="w3-third w3-margin-bottom">
        <div class="w3-card-4">
            <img src="~/Content/images/AboutUs/52047605_1190116581145639_8202011548097445888_n.jpg" alt="John" style="width:100%">
            <div class="w3-container">
                <h3>John Randolf</h3>
                <p class="w3-opacity">Owner & Master Violinist</p>
                <p>
                    John has been in the music industry since 1994. Music brings him joy he can't find anywhere else.
                    He enjoys playing multiple instruments and provide private lessons for the Violin, Trumpet, and the Trombone.
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>

    <div class="w3-third w3-margin-bottom">
        <div class="w3-card-4">
            <img src="~/Content/images/AboutUs/Dolezal JZD Marek Musil.jpg" alt="Mike" style="height:100%">
            <div class="w3-container">
                <h3>Mike Ross</h3>
                <p class="w3-opacity">Private Music Teacher</p>
                <p>
                    Mike has been working at BlowOut Instrument Rentals for 3 years and teaches private lesson for
                    individuals who play the Saxophone.  Mike also enjoys playing in a local jazz band, called Jazz Notes.
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>

    <div class="w3-third w3-margin-bottom">
        <div class="w3-card-4">
            <img src="~/Content/images/AboutUs/KateHeadshots-2-of-6-1024x684.jpg" alt="Kate" style="width:100%">
            <div class="w3-container">
                <h3>Kate Deardon</h3>
                <p class="w3-opacity">Private Music Teacher</p>
                <p>
                    Kate is the newest member of the team at BlowOut Instrument Rentals.  We are excited to have her
                    musical talent as part of our team.  She bring with her 10 years of teaching experience.  She is
                    looking forward to teaching anyone who  may be interested in playing the Trumpet or Trombone.
                </p>
                @*<p><button class="w3-button w3-light-grey w3-block">Contact</button></p>*@
            </div>
        </div>
    </div>
</div>

